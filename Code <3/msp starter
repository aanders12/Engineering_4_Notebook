head =    "   0"
twoArms = "  \|/"
torso =   "   |"
twoLegs = "  / \ "

def body(limbs):
    print("|---┐")  
    if limbs == 4:
        print("")
        print("")
        print("")
        print("")
    if limbs == 3:
        print(head)
        print("")
        print("")
        print("")
    if limbs == 2:
        print(head)
        print(twoArms)
        print("")
        print("")
    if limbs == 1:
        print(head)
        print(twoArms)
        print(torso)
        print("")
    if limbs == 0:
        print(head)
        print(twoArms)
        print(torso)
        print(twoLegs)
        
def wordLength():
    length = len(word)
    print ("_ " * length)

word = input("Player 1 Enter a word")
limbs = 4 # sets the amount of turns to four, based on limb grouping
guesses = 0 
print("\n" *50 )
body(limbs)
wordLength()
guess = "_" * len(word)
letter = list(word)
correctLetters = ""

while (limbs > 0 and guess != word) :
    yesGuess = False #boolean
    guessLetter = input("guess letter")
    if guessLetter in word:
        correctLetters = correctLetters + guessLetter
    for spot in range(len(word)):
        if word[spot] in correctLetters:
            guess = guess[:spot] + guessLetter + guess[spot+1:]
            yesGuess = True
    if yesGuess == False:
        limbs = limbs - 1
    body(limbs)
    print(guess)
    
if (limbs == 0):
    body(limbs)
    wordLength()
    print("you lost, the word was", + word)
else:
    print("you won, the word was", + word)

   
